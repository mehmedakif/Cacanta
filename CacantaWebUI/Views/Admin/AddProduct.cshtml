@model Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h2>Add Product</h2>
    <hr />

    <form asp-controller="Admin" asp-action="AddProduct" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="ProductName">Ürün Adı</label>
            <input asp-for="ProductName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Price">Fiyatı</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <select name="_selectedCategories" class="mdb-select md-form" multiple>
                @await Component.InvokeAsync("CategorySelector")
            </select>
        </div>


<div class="form-group">
    <input type="file" name="file" id="file" class="form-control" />
</div>

<input type="submit" class="btn btn-primary" value="Save" />
    </form>

</div>
